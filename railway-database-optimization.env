# Railway Database Optimization Environment Variables
# Add these to your Railway Strapi service variables for better reliability

# Database Connection Timeouts (in milliseconds)
DATABASE_CONNECT_TIMEOUT=30000
DATABASE_REQUEST_TIMEOUT=60000
DATABASE_IDLE_TIMEOUT=300000
DATABASE_ACQUIRE_TIMEOUT=30000
DATABASE_CREATE_TIMEOUT=30000
DATABASE_DESTROY_TIMEOUT=5000
DATABASE_REAP_INTERVAL=1000
DATABASE_CREATE_RETRY_INTERVAL=200

# Database Retry Settings
DATABASE_RETRY_DELAY=1000
DATABASE_MAX_RETRIES=3

# Connection Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# General Database Timeouts
DATABASE_CONNECTION_TIMEOUT=60000
DATABASE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT_MILLIS=30000

# SSL Settings (if needed)
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=false
